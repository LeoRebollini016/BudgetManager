@model ErrorVM
@{
    ViewData["Title"] = "Error";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="text-center">
            <h1 class="text-danger fw-bold display-4">Error</h1>

            <div class="card border-0 bg-light mt-4">
                <div class="card-body py-4">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <h4 class="text-dark mb-3">Detalles del error:</h4>
                        <p class="lead text-muted border-top pt-3">
                            @Model.ErrorMessage
                        </p>
                    }
                    else
                    {
                        <h2 class="h4 text-secondary">
                            Ocurrió un error inesperado al procesar tu solicitud.
                        </h2>
                    }
                </div>
            </div>

            <p class="text-muted mt-4">Por favor, intenta nuevamente más tarde.</p>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Transaction")" class="btn btn-primary px-4">Inicio</a>
            </div>
        </div>
    </div>
</div>
