@using BudgetManager.Domain.Constants.Enum
@using BudgetManager.Web.Models.Category
@model CategoryFormVM
@{
	ViewData["Title"] = "Crear categoría";
}

<h1>Crear categoría</h1>
<h5>La categoría indica en que gastamos y de donde provienen nuestros ingresos.</h5>
<form asp-action="Create">
	<div class="mb-3">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label asp-for="@Model.OperationTypeId" class="form-label"></label>
		<select asp-for="@Model.OperationTypeId"
				asp-items="Html.GetEnumSelectList<OperationTypeEnum>()"
				class="form-select"
				aria-label="Default select example">
			<option value="" selected>Seleccione una opción</option>
		</select>
		<span asp-validation-for="@Model.OperationTypeId" class="text-danger"></span>
	</div>

	<button class="btn btn-primary">Enviar</button>
	<a class="btn btn-danger" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}