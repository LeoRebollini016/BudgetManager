@using BudgetManager.Models.Account
@model IEnumerable<AccountListVM>
@{
	ViewData["Title"] = "Cuentas";
}

<h1>Cuentas</h1>
<h5>Cuentas pertenecientes al usuario.</h5>

<a asp-action="Create" class="btn btn-primary mb-3">Crear una cuenta</a>

<table class="table table-striped">
	<thead>
		<tr>
			<th>#</th>
			<th>Nombre</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody id="reorderable">
		@if(Model != null)
		{
			var index = 1;
			@foreach (var account in Model)
			{
				<tr>
					<td>@index</td>
					<td>
						@account.Name
					</td>
					<td>
						<input type="hidden" value="@account.Id" class="ids" />
						<a class="btn btn-primary bi bi-pencil" asp-controller="Account" asp-action="Edit" asp-route-id="@account.Id"></a>
						<a class="btn btn-danger bi bi-trash" asp-controller="Account" asp-action="Delete" asp-route-id="@account.Id"></a>
					</td>
				</tr>
				index++;
			}
		}else
		{
			<tr>
				<td>
					<span class="btn-light">No hay cuentas disponibles.</span>
				</td>
			</tr>
		}
	</tbody>
</table>