@model IEnumerable<TransactionDetailsVM>
@{
	ViewData["Title"] = "Transacciones";
}

<h1>Transacciones</h1>
<h4>Las transacciones son la transferencias de activos a través de cuentas y/o usuarios.</h4>

<a asp-action="Create" class="btn btn-primary mb-3">Crear transacción</a>

<table class="table">
	@if (Model.Any())
	{
		var index = 1;
		<thead>
			<tr>
				<th>#</th>
				<th>Cuenta</th>
				<th>Monto</th>
				<th>Categoría</th>
				<th>Fecha de transacción</th>
				<th>Tipo de operación</th>
				<th>Nota</th>
				<th>Acciones</th>
			</tr>
		</thead>
		@foreach(var transaction in Model)
		{
			<tbody>
				<tr>
					<td>@index</td>
					<td>@transaction.Account</td>
					<td>@transaction.Amount</td>
					<td>@transaction.Category</td>
					<td>@transaction.TransactionDate.ToString("d")</td>
					<td>@transaction.OperationType</td>
					<td>@transaction.Note</td>
					<td>
						<input type="hidden" value="@transaction.Id" class="ids" />
						<a class="btn btn-primary bi bi-pencil" asp-controller="Transaction" asp-action="Edit" asp-route-id="@transaction.Id"></a>
						<a class="btn btn-danger bi bi-trash" asp-controller="Transaction" asp-action="Delete" asp-route-id="@transaction.Id"></a>
					</td>
				</tr>
			</tbody>
			index++;
		}
	}
	else
	{
		<tr>
			<td>
				<span>No Hay elementos.</span>
			</td>
		</tr>
	}
</table>