@model IEnumerable<CategoryVM>
@{
	ViewData["Title"] = "Categorias";
}

<h1>Categorias</h1>
<div class="mb-3">
	<a asp-action="Create" class="btn btn-primary">Crear categoría</a>
</div>

@if (Model.Any())
{
	@foreach(var category in Model)
	{
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nombre</th>
				<th scope="col">Tipo de operación</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row">@category.Id</th>
				<th scope="row">@category.Name</th>
				<th scope="row">@category.OperationTypeId</th>
			</tr>
		</tbody>

	}
}else 
{
	<span class="text-info">No hay categorias para mostrar.</span>
}

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

